---
layout: null
permalink: /tag/json/
---
{ 
	{% for tag in site.tags %}
		{% if tag[0] != site.tags.first[0] %}
			,
		{% endif %}
		"{{ tag[0] }}": 
			[
			{% for post in tag[1] %}
				{% if post != tag[1].first %},{% endif %}
				{ 
				  "url":"{{ post.url | prepend: site.baseurl }}"
				, "title":"{{ post.title }}"
				, "meta":"{{ post.date | date:"%F" }}{% if post.author %} by {{ post.author }}{% endif %}{% if post.meta %} {{ post.meta }}{% endif %}"
				, "excerpt":"{{ post.excerpt | replace: '"', '\"' | strip_newlines }}"
				{% if post.content contains site.excerpt_separator %}
				, "more": "<p><a href=\"{{ post.url | prepend: site.baseurl }}\">more</a></p>"
				{% endif %}
				}
			{% endfor %}
			]
	{% endfor %} 
}